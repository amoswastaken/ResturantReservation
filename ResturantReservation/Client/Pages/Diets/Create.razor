@page "/diets/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Diets</h3>
<hr />
<br />

<EditForm Model="@diet" OnValidSubmit="CreateDiet">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label>Name: </label>
        <div>
            <InputText @bind-Value="@diet.Name" class="form-control" />
            <ValidationMessage For="@(() => diet.Name)" />
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-success btn-block">
        Create Diet
    </button>
    <BackToList Target="diets" />
</EditForm>

@code {
    Diet diet = new Diet();

    private async Task CreateDiet()
    {
        await _client.PostAsJsonAsync(Endpoints.DietsEndpoint, diet);
        _navManager.NavigateTo("/diets");
    }
}
